<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="LocationSample.MainPage">
    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Orientation="Vertical">
        <Label Text="Turn on gps before use" Margin="20" FontSize="Large"/>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="Start" Orientation="Horizontal">
            <Label Text="Latitude: " Margin="20" FontSize="Large"/>
            <Label x:Name="Lbl_lat"   Margin="20" FontSize="Large"/>
        </StackLayout>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="Start" Orientation="Horizontal">
            <Label Text="Longitude: " Margin="20" FontSize="Large"/>
            <Label x:Name="Lbl_long"   Margin="20" FontSize="Large"/>
        </StackLayout>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="Start" Orientation="Horizontal">
            <Label Text="Speed: " Margin="20" FontSize="Large"/>
            <Label x:Name="Lbl_speed"   Margin="20" FontSize="Large"/>
        </StackLayout>

        <Button x:Name="Btn_fetch" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Clicked="Button_Clicked" Text="Fetch Location"/>
     </StackLayout>
</ContentPage>